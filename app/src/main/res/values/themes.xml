<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_light</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Button" >

        <item name="android:background">@drawable/buttons_trasp</item>
        <item name="colorAccent">@color/blue_light</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">18sp</item>
        <item name="color">@color/blue_light</item>
        <item name="colorButtonNormal">@color/blue_light</item>
        <item name="colorOnPrimary">@color/blue_light</item>
        <item name="strokeColor">@color/blue_light</item>
        <item name="android:strokeColor">@color/blue_light</item>
        <item name="strokeWidth">2.5dp</item>
        <item name="android:strokeAlpha">@color/blue_light</item>
        <item name="colorPrimary">@color/blue_light</item>


    </style>
</resources>